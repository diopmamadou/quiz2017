@CHARSET "ISO-8859-1";

body {
	text-align: center;
	background-color: #43dee7
}

table {
	border-collapse: collapse;
	width: 40%;
	margin: auto;
}

th, td {
	text-align: left;
	padding: 8px;
}

tr:nth-child(even) {
	background-color: #f2f2f2
}

th {
	background-color: #4CAF50;
	color: white;
}

td.submit {
	text-align: center;
	cursor: pointer;
}