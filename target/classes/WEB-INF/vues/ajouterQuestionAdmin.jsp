<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<link href="resources/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>AJOUTER UNE QUESTION</title>
</head>
<body>
<div class="container">
<h2 class="text-center">AJOUTER UNE QUESTION</h2>
<hr/>
<form method="POST" action="ajouterQuestionQuiz" commandName="formulaireAjouterQuestion">
<div class="form-group row"> 
<label class="col-2 col-form-label" for="question">Question : </label>
<div class="col-10">
<textarea class="form-control" id="question" placeholder="Saisir votre question ici"></textarea>
<br>
</div>
<br>
<label class="col-2 col-form-label" for="bonneReponse">La bonne réponse : </label>
<div class="col-10">
<input type ="text" class="form-control" placeholder="La bonne réponse" id="bonneReponse"> 
</div>
<br>
<br>
<label class="col-2 col-form-label" for="proposition1">Proposition N°1 : </label>
<div class="col-10">
<input type ="text" class="form-control" placeholder="Proposition N°1" id="proposition1"> 
</div>
<br>
<br>
<label class="col-2 col-form-label" for="proposition2">Proposition N°2 : </label>
<div class="col-10">
<input type ="text" class="form-control" placeholder="Proposition N°2" id="proposition2"> 
</div>
<br>
<br>
<label class="col-2 col-form-label" for="proposition3">Proposition N°3 : </label>
<div class="col-10">
<input type ="text" class="form-control" placeholder="Proposition N°3" id="proposition3"> 
</div>
<br>
<br>
<label class="col-2 col-form-label" for="proposition4">Proposition N°4 : </label>
<div class="col-10">
<input type ="text" class="form-control" placeholder="Proposition N°4" id="proposition4"> 
</div>
</div>
<br>

<br>
<div class="row justify-content-md-center">
<div class="col col-lg-8 text-center">
<button type="submit" class="btn btn-primary" value="ajouterQuestionQuiz">AJOUTER</button>
<button type="reset" class="btn btn-primary">RETABLIR</button>
<button type="button" class="btn btn-primary">ANNULER</button>
</div>
</div>
</form>
</div>
</body>
</html> 
